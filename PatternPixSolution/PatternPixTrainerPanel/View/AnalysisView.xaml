<UserControl x:Class="PatternPixTrainerPanel.View.AnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PatternPixTrainerPanel.View"
             xmlns:vm="clr-namespace:PatternPixTrainerPanel.ViewModel"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4A76A8" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Command="{Binding BackCommand}" 
                        Content="&lt; Back" 
                        />

                <TextBlock Grid.Column="1" 
                           Text="Training Analysis" 
                           Foreground="White" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Filter Controls -->
        <Border Grid.Row="1" 
                Background="#F8F9FA" 
                BorderBrush="#E0E5EB" 
                BorderThickness="0,0,0,1" 
                Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row of Filters -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Child Selection -->
                    <TextBlock Grid.Column="0" 
                               Text="Child:" 
                               VerticalAlignment="Center" 
                               FontWeight="SemiBold" 
                               Margin="0,0,10,0"/>

                    <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding Children}"
                              SelectedItem="{Binding SelectedChild}"
                             
                             VerticalAlignment="Center"/>

                    <!-- Symmetry Filter -->
                    <TextBlock Grid.Column="3" 
                               Text="Symmetry:" 
                               VerticalAlignment="Center" 
                               FontWeight="SemiBold" 
                               Margin="0,0,10,0"/>

                    <ComboBox Grid.Column="4" 
                              ItemsSource="{Binding SymmetryOptions}"
                              SelectedItem="{Binding SelectedSymmetry}"
                              VerticalAlignment="Center">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Chart Type -->
                    <TextBlock Grid.Column="6" 
                               Text="Chart Type:" 
                               VerticalAlignment="Center" 
                               FontWeight="SemiBold" 
                               Margin="0,0,10,0"/>

                    <ComboBox Grid.Column="7" 
                              ItemsSource="{Binding ChartTypes}"
                              SelectedItem="{Binding SelectedChartType}"
                              VerticalAlignment="Center"/>
                </Grid>

                <!-- Second Row of Filters -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Date Range -->
                    <TextBlock Grid.Column="0" 
                               Text="From:" 
                               VerticalAlignment="Center" 
                               FontWeight="SemiBold" 
                               Margin="0,0,10,0"/>

                    <DatePicker Grid.Column="1" 
                                SelectedDate="{Binding StartDate}"
                                VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="3" 
                               Text="To:" 
                               VerticalAlignment="Center" 
                               FontWeight="SemiBold" 
                               Margin="0,0,10,0"/>

                    <DatePicker Grid.Column="4" 
                                SelectedDate="{Binding EndDate}"
                                VerticalAlignment="Center"/>

                    <!-- Time Range -->
                    <TextBlock Grid.Column="6" 
                               Text="Time Range:" 
                               VerticalAlignment="Center" 
                               FontWeight="SemiBold" 
                               Margin="0,0,10,0"/>

                    <ComboBox Grid.Column="7" 
                              ItemsSource="{Binding TimeRanges}"
                              SelectedItem="{Binding SelectedTimeRange}"
                              VerticalAlignment="Center"/>

                   
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Charts Area -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Primary Chart -->
                <Border Grid.Row="0" 
                        BorderBrush="#E0E5EB" 
                        BorderThickness="1" 
                        CornerRadius="6"
                        Background="White">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="{Binding PrimaryChartTitle}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>

                        <syncfusion:SfChart Grid.Row="1" x:Name="PrimaryChart">
                            <!-- Primary Axis -->
                            <syncfusion:SfChart.PrimaryAxis>
                                <syncfusion:CategoryAxis 
                                    Header="Training Sessions"
                                    LabelRotationAngle="45"
                                    ShowGridLines="True" />
                            </syncfusion:SfChart.PrimaryAxis>

                            <!-- Secondary Axis -->
                            <syncfusion:SfChart.SecondaryAxis>
                                <syncfusion:NumericalAxis 
                                    Header="{Binding PrimaryYAxisHeader}"
                                    Minimum="0"
                                    ShowGridLines="True" />
                            </syncfusion:SfChart.SecondaryAxis>

                            <!-- Dynamic Series based on selection -->
                            <syncfusion:LineSeries 
                                ItemsSource="{Binding Trainings}" 
                                XBindingPath="FormattedDateTime" 
                                YBindingPath="{Binding PrimaryDataPath}"
                                Label="{Binding PrimarySeriesLabel}"
                                Interior="#3498DB"
                                StrokeThickness="3"
                                ShowTooltip="True">
                                <syncfusion:LineSeries.AdornmentsInfo>
                                    <syncfusion:ChartAdornmentInfo ShowMarker="True" 
                                                                 Symbol="Ellipse" 
                                                                 SymbolInterior="#3498DB" 
                                                                 SymbolHeight="8" 
                                                                 SymbolWidth="8"/>
                                </syncfusion:LineSeries.AdornmentsInfo>
                            </syncfusion:LineSeries>

                            <!-- Secondary Series (if enabled) -->
                            <syncfusion:LineSeries 
                                ItemsSource="{Binding FilteredTrainings}" 
                                XBindingPath="FormattedDateTime" 
                                YBindingPath="{Binding SecondaryDataPath}"
                                Label="{Binding SecondarySeriesLabel}"
                                Interior="#E74C3C"
                                StrokeThickness="3"
                                ShowTooltip="True"
                                Visibility="{Binding ShowSecondarySeriesVisibility}">
                                <syncfusion:LineSeries.AdornmentsInfo>
                                    <syncfusion:ChartAdornmentInfo ShowMarker="True" 
                                                                 Symbol="Diamond" 
                                                                 SymbolInterior="#E74C3C" 
                                                                 SymbolHeight="8" 
                                                                 SymbolWidth="8"/>
                                </syncfusion:LineSeries.AdornmentsInfo>
                            </syncfusion:LineSeries>

                            <!-- Legend -->
                            <syncfusion:SfChart.Legend>
                                <syncfusion:ChartLegend DockPosition="Bottom" Margin="0,10,0,0" />
                            </syncfusion:SfChart.Legend>
                        </syncfusion:SfChart>
                    </Grid>
                </Border>

                <!-- Secondary Chart (Progress Trend) -->
                <Border Grid.Row="2" 
                        BorderBrush="#E0E5EB" 
                        BorderThickness="1" 
                        CornerRadius="6"
                        Background="White">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Progress Trend Analysis" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>

                        <syncfusion:SfChart Grid.Row="1" x:Name="TrendChart">
                            <syncfusion:SfChart.PrimaryAxis>
                                <syncfusion:CategoryAxis Header="Sessions" ShowGridLines="True" />
                            </syncfusion:SfChart.PrimaryAxis>

                            <syncfusion:SfChart.SecondaryAxis>
                                <syncfusion:NumericalAxis Header="Moving Average" ShowGridLines="True" />
                            </syncfusion:SfChart.SecondaryAxis>

                            <!-- Moving Average Time -->
                            <syncfusion:SplineAreaSeries 
                                ItemsSource="{Binding MovingAverageData}" 
                                XBindingPath="SessionNumber" 
                                YBindingPath="AverageTime"
                                Label="Avg Time (5-session)"
                                Interior="#52C41A"
                                StrokeThickness="2"
                                Opacity="0.6"
                                ShowTooltip="True"/>

                            <!-- Moving Average Errors -->
                            <syncfusion:SplineSeries 
                                ItemsSource="{Binding MovingAverageData}" 
                                XBindingPath="SessionNumber" 
                                YBindingPath="AverageErrors"
                                Label="Avg Errors (5-session)"
                                Interior="#FF7875"
                                StrokeThickness="2"
                                ShowTooltip="True">
                                <syncfusion:SplineSeries.AdornmentsInfo>
                                    <syncfusion:ChartAdornmentInfo ShowMarker="True" 
                                                                 Symbol="Ellipse" 
                                                                 SymbolHeight="6" 
                                                                 SymbolWidth="6"/>
                                </syncfusion:SplineSeries.AdornmentsInfo>
                            </syncfusion:SplineSeries>

                            <syncfusion:SfChart.Legend>
                                <syncfusion:ChartLegend DockPosition="Bottom" />
                            </syncfusion:SfChart.Legend>
                        </syncfusion:SfChart>
                    </Grid>
                </Border>
                

            </Grid>
            

            <!-- Statistics Panel -->
            <Border Grid.Column="2" 
                    BorderBrush="#E0E5EB" 
                    BorderThickness="1" 
                    CornerRadius="6"
                    Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="507" VerticalAlignment="Top">
                    <StackPanel Margin="15">
                        <TextBlock Text="Analysis Summary" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Center"/>

                        <!-- Statistics Cards -->
                        <Border Background="#F8F9FA" 
                                BorderBrush="#E0E5EB" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Padding="12" 
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Total Sessions" 
                                           FontSize="12" 
                                           Foreground="#6C757D" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding TotalSessions}" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#2E86AB"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#F8F9FA" 
                                BorderBrush="#E0E5EB" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Padding="12" 
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Average Time" 
                                           FontSize="12" 
                                           Foreground="#6C757D" 
                                           FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding AverageTime, StringFormat='{}{0:F1}'}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="#52C41A"/>
                                    <TextBlock Text=" sec" 
                                               FontSize="14" 
                                               Foreground="#6C757D" 
                                               VerticalAlignment="Bottom" 
                                               Margin="2,0,0,2"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="#F8F9FA" 
                                BorderBrush="#E0E5EB" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Padding="12" 
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Average Errors" 
                                           FontSize="12" 
                                           Foreground="#6C757D" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding AverageErrors, StringFormat='{}{0:F1}'}" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#FF7875"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#F8F9FA" 
                                BorderBrush="#E0E5EB" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Padding="12" 
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Best Time" 
                                           FontSize="12" 
                                           Foreground="#6C757D" 
                                           FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding BestTime, StringFormat='{}{0:F1}'}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="#1890FF"/>
                                    <TextBlock Text=" sec" 
                                               FontSize="14" 
                                               Foreground="#6C757D" 
                                               VerticalAlignment="Bottom" 
                                               Margin="2,0,0,2"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                       
                            

                        <!-- Symmetry Breakdown -->
                        <TextBlock Text="Performance by Symmetry" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding SymmetryStats}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA" 
                                            BorderBrush="#E0E5EB" 
                                            BorderThickness="1" 
                                            CornerRadius="4" 
                                            Padding="10" 
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" 
                                                       Text="{Binding Symmetry}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="12"/>

                                            <Grid Grid.Row="1" Margin="0,5,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Avg Time:" 
                                                               FontSize="10" 
                                                               Foreground="#6C757D"/>
                                                    <TextBlock Text="{Binding AvgTime, StringFormat='{}{0:F1}s'}" 
                                                               FontSize="11" 
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Avg Errors:" 
                                                               FontSize="10" 
                                                               Foreground="#6C757D"/>
                                                    <TextBlock Text="{Binding AvgErrors, StringFormat='{}{0:F1}'}" 
                                                               FontSize="11" 
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <TextBlock Grid.Row="0" Text="Peer Comparison" 
FontSize="18" FontWeight="Bold" 
Margin="0,0,0,10"/>

                                <!-- Overall Performance Comparison Chart -->
                                <syncfusion:SfChart Grid.Row="1" Header="Child vs Peers" 
         Margin="5">
                                    <syncfusion:SfChart.PrimaryAxis>
                                        <syncfusion:CategoryAxis Header="Metrics" />
                                    </syncfusion:SfChart.PrimaryAxis>
                                    <syncfusion:SfChart.SecondaryAxis>
                                        <syncfusion:NumericalAxis Header="Values" />
                                    </syncfusion:SfChart.SecondaryAxis>

                                    <!-- Child's Performance Series -->
                                    <syncfusion:ColumnSeries ItemsSource="{Binding PeerComparisonData}" 
                  XBindingPath="Metric" 
                  YBindingPath="ChildValue"
                  Label="Selected Child"
                  Interior="LightBlue">
                                        <syncfusion:ColumnSeries.AdornmentsInfo>
                                            <syncfusion:ChartAdornmentInfo ShowLabel="True" LabelPosition="Auto"/>
                                        </syncfusion:ColumnSeries.AdornmentsInfo>
                                    </syncfusion:ColumnSeries>

                                    <!-- Peer Average Series -->
                                    <syncfusion:ColumnSeries ItemsSource="{Binding PeerComparisonData}" 
                  XBindingPath="Metric" 
                  YBindingPath="PeerAverage"
                  Label="Peer Average"
                  Interior="LightCoral">
                                        <syncfusion:ColumnSeries.AdornmentsInfo>
                                            <syncfusion:ChartAdornmentInfo ShowLabel="True" LabelPosition="Auto"/>
                                        </syncfusion:ColumnSeries.AdornmentsInfo>
                                    </syncfusion:ColumnSeries>

                                    <syncfusion:SfChart.Legend>
                                        <syncfusion:ChartLegend DockPosition="Bottom"/>
                                    </syncfusion:SfChart.Legend>
                                </syncfusion:SfChart>

                               
                                    
                               
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                    
                   
                </ScrollViewer>
            </Border>
            
        </Grid>
        
    </Grid>

    <!-- Resources -->
    <UserControl.Resources>
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A76A8" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A5F8A" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E4C70" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
</UserControl>