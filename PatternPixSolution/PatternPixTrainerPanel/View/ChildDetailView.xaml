<UserControl x:Class="PatternPixTrainerPanel.View.ChildDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PatternPixTrainerPanel.View"
             xmlns:vm="clr-namespace:PatternPixTrainerPanel.ViewModel"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:converters="clr-namespace:PatternPixTrainerPanel.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:MaxValueConverter x:Key="MaxValueConverter" />

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A76A8" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A5F8A" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E4C70" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4A76A8" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Command="{Binding BackCommand}" 
                        Content="&lt; Back" 
                        Foreground="White" 
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14" 
                        HorizontalAlignment="Left"/>

                <TextBlock Grid.Column="1" 
                           Text="Child Details" 
                           Foreground="White" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Child Information Panel -->
        <Border Grid.Row="1" 
                Background="#F5F7FA" 
                BorderBrush="#E0E5EB" 
                BorderThickness="0,0,0,1" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Child Information -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding FullName}" 
                               FontSize="24" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,8"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Date of Birth:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,5,5"/>

                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Text="{Binding DateOfBirth, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                   Margin="0,0,20,5"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" 
                                   Text="Age:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,5,5"/>

                        <TextBlock Grid.Row="0" Grid.Column="3" 
                                   Text="{Binding Age}" 
                                   Margin="0,0,0,5"/>

                        <!-- Additional information fields can be added here -->
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Training History -->
        <Border Grid.Row="2" Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Training History" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding Trainings}" 
                          AutoGenerateColumns="False" 
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          IsReadOnly="True"
                          BorderThickness="1"
                          BorderBrush="#E0E5EB"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#F9FAFC">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" 
                                            Binding="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                            Width="120"/>

                        <DataGridTextColumn Header="Time" 
                                            Binding="{Binding TimeOfDay, StringFormat='{}{0:hh\\:mm}'}" 
                                            Width="100"/>

                        <DataGridTextColumn Header="Time Needed" 
                                            Binding="{Binding TimeNeeded, StringFormat='{}{0} sec'}" 
                                            Width="100"/>

                        <DataGridTextColumn Header="Symmetry" 
                                            Binding="{Binding Symmetry}" 
                                            Width="80"/>

                        <DataGridTextColumn Header="Errors" 
                                            Binding="{Binding Errors}" 
                                            Width="80"/>
                    </DataGrid.Columns>

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F0F2F5" />
                            <Setter Property="Padding" Value="10,8" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>

                <syncfusion:SfChart Grid.Row="2" Margin="0,10,0,10">
                    <!-- Primary Axis (X-Axis: Date) -->
                    <syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:DateTimeAxis 
            Header="Date and Time"
            LabelFormat="dd.MM.yyyy HH:mm"
            IntervalType="Auto"
            LabelRotationAngle="45"
            EdgeLabelsDrawingMode="Shift"
            ShowGridLines="True">
                        </syncfusion:DateTimeAxis>
                    </syncfusion:SfChart.PrimaryAxis>

                    <!-- Secondary Axis (Y-Axis: Time Needed) -->
                    <syncfusion:SfChart.SecondaryAxis>
                        <syncfusion:NumericalAxis 
            Header="Time Needed (seconds)"
            Minimum="0"
            Maximum="{Binding MaxTimeNeeded, Converter={StaticResource MaxValueConverter}}"
            Interval="30"
            OpposedPosition="False">
                        </syncfusion:NumericalAxis>
                    </syncfusion:SfChart.SecondaryAxis>

                    <!-- Line series for TimeNeeded (using the primary Y-axis) -->
                    <syncfusion:LineSeries 
        ItemsSource="{Binding Trainings}" 
        XBindingPath="DateTimeWithTime" 
        YBindingPath="TimeNeeded" 
        Label="Time Needed (s)"
        Interior="#3498DB"
        StrokeThickness="2"
        ShowTooltip="True">
                        <syncfusion:LineSeries.AdornmentsInfo>
                            <syncfusion:ChartAdornmentInfo 
                ShowMarker="True"
                SymbolHeight="8"
                SymbolWidth="8"
                SymbolInterior="#3498DB"/>
                        </syncfusion:LineSeries.AdornmentsInfo>
                    </syncfusion:LineSeries>

                    <!-- Line series for Errors (using a custom Y-axis) -->
                    <syncfusion:LineSeries 
        ItemsSource="{Binding Trainings}" 
        XBindingPath="DateTimeWithTime" 
        YBindingPath="Errors" 
        Label="Errors"
        Interior="#E74C3C"
        StrokeThickness="2"
        ShowTooltip="True">
                        <syncfusion:LineSeries.YAxis>
                            <syncfusion:NumericalAxis 
                OpposedPosition="True"
                Minimum="0"
                Maximum="{Binding MaxErrors, Converter={StaticResource MaxValueConverter}}"
                Interval="1"
                Header="Errors">
                            </syncfusion:NumericalAxis>
                        </syncfusion:LineSeries.YAxis>
                        <syncfusion:LineSeries.AdornmentsInfo>
                            <syncfusion:ChartAdornmentInfo 
                ShowMarker="True"
                SymbolHeight="8"
                SymbolWidth="8"
                SymbolInterior="#E74C3C"/>
                        </syncfusion:LineSeries.AdornmentsInfo>
                    </syncfusion:LineSeries>

                    <!-- Chart legend -->
                    <syncfusion:SfChart.Legend>
                        <syncfusion:ChartLegend 
            DockPosition="Bottom" 
            IconHeight="12"
            IconWidth="12"
            IconVisibility="Visible"
            Margin="0,10,0,0">
                        </syncfusion:ChartLegend>
                    </syncfusion:SfChart.Legend>
                </syncfusion:SfChart>

            </Grid>
        </Border>

        <!-- Actions Bar -->
        <Border Grid.Row="3" 
                Background="#F5F7FA" 
                BorderBrush="#E0E5EB" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">

            </StackPanel>
        </Border>
    </Grid>
</UserControl>