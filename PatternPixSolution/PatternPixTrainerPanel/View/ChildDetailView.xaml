<UserControl x:Class="PatternPixTrainerPanel.View.ChildDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PatternPixTrainerPanel.View"
             xmlns:vm="clr-namespace:PatternPixTrainerPanel.ViewModel"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"

             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4A76A8" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Command="{Binding BackCommand}" 
                        Content="&lt; Back" 
                        Foreground="White" 
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14" 
                        HorizontalAlignment="Left"/>

                <TextBlock Grid.Column="1" 
                           Text="Child Details" 
                           Foreground="White" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Child Information Panel -->
        <Border Grid.Row="1" 
                Background="#F5F7FA" 
                BorderBrush="#E0E5EB" 
                BorderThickness="0,0,0,1" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Child Information -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding FullName}" 
                               FontSize="24" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,8"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            
                           
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Date of Birth:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,5,5"/>

                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Text="{Binding DateOfBirth, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                   Margin="0,0,20,5"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" 
                                   Text="Age:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,5,5"/>

                        <TextBlock Grid.Row="0" Grid.Column="3" 
                                   Text="{Binding Age}" 
                                   Margin="0,0,20,5"/>

                       
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Training History -->
        <Border Grid.Row="2" Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Training History" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <!-- Enhanced Training List with Time Grouping -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding GroupedTrainingsByTime}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Date Group -->
                                <Expander IsExpanded="True" Margin="0,5,0,10">
                                    <Expander.Header>
                                        <Border Background="#DCE6F1" 
                                                Padding="10,8" 
                                                CornerRadius="4">
                                            <TextBlock Text="{Binding DateDisplay}" 
                                                       FontWeight="Bold" 
                                                       FontSize="16"/>
                                        </Border>
                                    </Expander.Header>

                                    <ItemsControl ItemsSource="{Binding TimeGroups}" Margin="20,10,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <!-- Time Group -->
                                                <Border BorderBrush="#E0E5EB" 
                                                        BorderThickness="1" 
                                                        CornerRadius="4" 
                                                        Margin="0,5,0,10">
                                                    <StackPanel>
                                                        <!-- Time Range Header -->
                                                        <Border Background="#F8F9FA" 
                                                                Padding="10,5" 
                                                                CornerRadius="4,4,0,0">
                                                            <TextBlock Text="{Binding TimeRangeDisplay}" 
                                                                       FontStyle="Italic" 
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#6C757D"/>
                                                        </Border>

                                                        <!-- Training Items -->
                                                        <ItemsControl ItemsSource="{Binding Trainings}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border BorderBrush="#F1F3F4" 
                                                                            BorderThickness="0,1,0,0" 
                                                                            Padding="15,8">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="100"/>
                                                                                <ColumnDefinition Width="100"/>
                                                                                <ColumnDefinition Width="80"/>
                                                                                <ColumnDefinition Width="80"/>
                                                                                <ColumnDefinition Width="80"/>
                                                                            </Grid.ColumnDefinitions>

                                                                            <TextBlock Grid.Column="0" 
                                                                                       Text="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                                                                       FontSize="12"
                                                                                       VerticalAlignment="Center"/>

                                                                            <TextBlock Grid.Column="1" 
                                                                                       Text="{Binding TimeOfDay, StringFormat='{}{0:hh\\:mm}'}" 
                                                                                       FontSize="12"
                                                                                       VerticalAlignment="Center"/>

                                                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                                                <TextBlock Text="Time: " 
           FontSize="11" 
           Foreground="Gray"
           VerticalAlignment="Center"/>
                                                                                <TextBlock Text="{Binding TimeNeeded}" 
                                                                                           FontSize="12"
                                                                                           VerticalAlignment="Center"/>
                                                                                <TextBlock Text=" sec" 
                                                                                           FontSize="10"
                                                                                           Foreground="Gray"
                                                                                           VerticalAlignment="Center"/>
                                                                            </StackPanel>

                                                                            <StackPanel Grid.Column="3" 
            Orientation="Horizontal" 
            HorizontalAlignment="Center">
                                                                                <TextBlock Text="Errors: " 
               FontSize="11" 
               Foreground="Gray"
               VerticalAlignment="Center"/>
                                                                                <TextBlock Text="{Binding Errors}" 
               FontSize="11"
               VerticalAlignment="Center"/>
                                                                            </StackPanel>

                                                                            <StackPanel Grid.Column="4" 
                                                                                        Orientation="Horizontal" 
                                                                                        HorizontalAlignment="Right">
                                                                                <TextBlock Text="Symmetry: " 
                                                                                           FontSize="11" 
                                                                                           Foreground="Gray"
                                                                                           VerticalAlignment="Center"/>
                                                                                <TextBlock Text="{Binding Symmetry}" 
                                                                                           FontSize="11"
                                                                                           VerticalAlignment="Center"/>
                                                                            </StackPanel>
                                                                        </Grid>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Chart remains the same -->
                <syncfusion:SfChart Grid.Row="2" Margin="0,0,0,10">
                    <!-- Chart Resources -->
                    <syncfusion:SfChart.Resources>
                        <DataTemplate x:Key="ErrorLabelTemplate">
                            <TextBlock Text="{Binding Item.Errors}" 
                       Foreground="#E74C3C" 
                       FontSize="10" 
                       FontWeight="Bold"/>
                        </DataTemplate>

                        <DataTemplate x:Key="ErrorTooltipTemplate">
                            <Border Background="White" 
                    BorderBrush="#E74C3C" 
                    BorderThickness="1" 
                    CornerRadius="3" 
                    Padding="5">
                                <TextBlock>
                    <Run Text="Errors: "/>
                    <Run Text="{Binding Item.Errors}" FontWeight="Bold"/>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </syncfusion:SfChart.Resources>
                    <!-- Primary Axis (X-Axis: Date) -->
                    <syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:CategoryAxis 
            Header="Training Sessions"
            LabelRotationAngle="45"
            LabelPlacement="OnTicks"
            ShowGridLines="True" />
                    </syncfusion:SfChart.PrimaryAxis>

                    <!-- Primary Y-Axis for Time -->
                    <syncfusion:SfChart.SecondaryAxis>
                        <syncfusion:NumericalAxis 
            Header="Time (seconds)"
            Minimum="0"
            ShowGridLines="True" />
                    </syncfusion:SfChart.SecondaryAxis>

                    <!-- Line series for Time Needed -->
                    <syncfusion:LineSeries 
        ItemsSource="{Binding Trainings}" 
        XBindingPath="FormattedDateTime" 
        YBindingPath="TimeNeeded" 
        Label="Time Needed (s)"
        Interior="#3498DB"
        StrokeThickness="2"
        ShowTooltip="True">
                        <syncfusion:LineSeries.AdornmentsInfo>
                            <syncfusion:ChartAdornmentInfo ShowMarker="True" 
                                         Symbol="Ellipse" 
                                         SymbolInterior="#3498DB" 
                                         SymbolHeight="6" 
                                         SymbolWidth="6"/>
                        </syncfusion:LineSeries.AdornmentsInfo>
                    </syncfusion:LineSeries>

                    <!-- Line series for Errors (scaled to fit with time values) -->
                    <syncfusion:LineSeries 
        ItemsSource="{Binding Trainings}" 
        XBindingPath="FormattedDateTime" 
        YBindingPath="ErrorsScaled" 
        Label="Errors"
        Interior="#E74C3C"
        StrokeThickness="2"
        ShowTooltip="True"
        TooltipTemplate="{StaticResource ErrorTooltipTemplate}">
                        <syncfusion:LineSeries.AdornmentsInfo>
                            <syncfusion:ChartAdornmentInfo ShowMarker="True" 
                                         Symbol="Diamond" 
                                         SymbolInterior="#E74C3C" 
                                         SymbolHeight="6" 
                                         SymbolWidth="6"/>
                        </syncfusion:LineSeries.AdornmentsInfo>
                    </syncfusion:LineSeries>

                    <!-- Legend -->
                    <syncfusion:SfChart.Legend>
                        <syncfusion:ChartLegend DockPosition="Bottom"
                              Margin="0,10,0,0" />
                    </syncfusion:SfChart.Legend>
                </syncfusion:SfChart>
            </Grid>
        </Border>

        <!-- Actions Bar -->
        <Border Grid.Row="3" 
                Background="#F5F7FA" 
                BorderBrush="#E0E5EB" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">

            </StackPanel>
        </Border>
    </Grid>

    <!-- Resources -->
    <UserControl.Resources>
        <CollectionViewSource x:Key="GroupedTrainings"
                          Source="{Binding Trainings}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="DateString" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A76A8" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A5F8A" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E4C70" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
</UserControl>